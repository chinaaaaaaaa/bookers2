 <% if @book.errors.any? %>
 <h3><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
 
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>User info</h1>
 
 <table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
   </tr>
  </thead>

<h1>New book</h1>
   
  <%= form_with model: @book do |f| %>
    
   
    <h6>Title</h6>
      <%= f.text_field :title %>
    <h6>Opinion</h6>
      <%= f.text_area :body %>
    <p><%= f.submit 'Create Book' %></p>
  <% end %>
  
<h1>Books</h1>

<% @books.each do |book| %>
<tbody>
  <td><%= link_to book_path(book.id) do %>
    <%= image_tag book.user.get_profile_image(100, 100) %>
  <% end %>
  </td>
  
  <td><%= book.title %></td>
  <td<%= book.body %>></td>
  
</tbody>
<% end %>

</table>