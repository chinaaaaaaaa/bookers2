<p><%= notice %></p>
<div class="container">
 <div class="row">
  <div claass="col-lg-3">
   <h2>User info</h2>
   <p><%= image_tag @user.get_profile_image(100,100) %></p>

    <table class="table">
     <tbody>
      <tr>
       <th>name</th>
       <th><%= @user.name %></th>
      </tr>
      <tr>
       <th>introduction</th>
       <th><%= @user.introduction %></th>
      </tr>
     </tbody>
    </table>
  
  <div class="row">
   <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  </div>
   
   <h1>New book</h1>
   
  <%= form_with model: @book do |f| %>
    
   
    <h6>Title</h6>
      <%= f.text_field :title %>
    <h6>Opinion</h6>
      <%= f.text_area :body %>
    <p><%= f.submit 'Create Book' %></p>
  <% end %>
  </div> 
  
  <div class="col-8">
  <table class="table table-striped">
    <thead>
    <h3>Books</h3>
    <tr>
     <th></th>
     <th>Title</th>
     
     <th>Opinion</th>
    
    </tr>
   </thead>
   
   <% @books.each do |book| %>
     <tr>
      <td>
        <%= image_tag book.user.get_profile_image(100, 100) %>
       
      </td>
  
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
      
       <% if book.user == current_user %>    
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
     <% else %>
      <td></td>
      <td></td>
     <% end %>
    <% end %>
    
   

     </tr>
     </tbody>
    </table>
  </table>
</div>
