<p><%= notice %></p>
<div class="container">
 <div class="row">
  <div claass="col-lg-3">
   <h2>User info</h2>
   <p><%= image_tag @user.get_profile_image(100,100) %></p>
    <table class="table">
     <tbody>
      <tr>
       <th>name</th>
       <th><%= @user.name %></th>
      </tr>
      <tr>
       <th>introduction</th>
       <th><%= @user.introduction %></th>
      </tr>
     </tbody>
    </table>
  
  <div class="row">
   <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  </div>
   
   <h1>New book</h1>
   
  <%= form_with model: @book do |f| %>
    
   
    <h6>Title</h6>
      <%= f.text_field :title %>
    <h6>Opinion</h6>
      <%= f.text_area :body %>
    <p><%= f.submit 'Create Book' %></p>
  <% end %>
  </div> 
 
 
<div class="col-8">
  <table class="table table-striped">
   <thead>
    <h3>Users</h3>
    <tr>
     <th>image</th>
     <th>name</th>
     <th colspan="3"></th>
    </tr>
   </thead>
  
   <tbody>
     <% @books.each do |book| %>
    <tr>
     <td>
      <%= image_tag book.user.get_profile_image(100, 100) %>
     </td>
  
     <td><%= book.user.name %></td>
     
     <td><%= link_to "show", user_path(book.user.id) %></td>
    <% end %>
    </tr>
   </tbody>
   </table>
  </div>
 </div>
</div>
